<h1>Posts#new</h1>

<%= form_with(model: @post, local: true) do |form| %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="field">
      <%= form.label :image %><br />
      <%= form.file_field :image %>
    </div>

    <div class="field">
      <%= form.label :description, 'コメント' %><br />
      <%= form.text_field :description %><br />
    </div>
  </div>
</div>
<br />
    <div class="row">
      <div class="col-md-3 col-md-offset-3">
        <div class="actions">
          <%= form.submit "Post picture", class: "btn btn-lg btn-primary"%>
        </div>
      </div>
    </div>
<% end %>
