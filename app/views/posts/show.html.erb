<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @post.image? %>
      <%= image_tag @post.image.url(:thumb) %>
    <% end %>
    <p><%= "コメント" %></p>
    <p><%= @post.description %></p>

    <p>いいね件数: <%= @post.likes.count %></p>
    <div class="actions">
      <% if current_user.already_liked?(@post) %>
        <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete, class:'btn btn-primary' %>
      <% else %>
        <%= button_to 'いいね', post_likes_path(@post), class:'btn btn-primary' %>
      <% end %>
    </div>

    <div class="comment-wrapper border-top mb-10">
      <p class="mt-5">コメント一覧</p>
      <% @comments.each do |c| %>
        <div>
          <% unless c.user.blank? %>
            <a href="<%= user_path(c.user_id) %>"><%= image_tag c.user.image.to_s, size: "100x100",
              class:"rounded-circle icon_image mr-3 mb-3"%></a>
            <% end %>

          <br />
          <%= c.content %>
        </div>
        <br />
      <% end %>
      <% if user_signed_in? %>
        <%= form_with(model: [@post, @comment], local: true) do |f| %>
          <%= f.text_area :content, class: "form-control", rows: 5 %>
          <%= button_tag type: "submit", class: "btn btn-success float-right mt-1" do %>
            <i class="far fa-comments"></i> コメントする
          <% end %>
        <% end %>
      <% end %>
    </div>

      <%= link_to "ホームへ戻る", "/" %>
    </div>
  </div>
